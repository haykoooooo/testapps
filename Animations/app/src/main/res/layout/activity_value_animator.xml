<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ValueAnimatorActivity">

    <ImageView
        android:id="@+id/imageViewV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ball" />

    <TextView
        android:id="@+id/textViewVU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_3sdp"
        android:text="Up"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/textViewVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewVU"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_3sdp"
        android:text="Down"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/textViewVR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewVU"
        android:layout_margin="@dimen/_3sdp"
        android:layout_toEndOf="@+id/textViewVD"
        android:layout_toRightOf="@+id/textViewVD"
        android:text="Right"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/textViewVL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewVD"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_toLeftOf="@+id/textViewVD"
        android:layout_toStartOf="@+id/textViewVD"
        android:text="Left"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>